<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

  <android.opengl.GLSurfaceView
      android:id="@+id/gl_surface"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <include
      tools:visibility="gone"
      android:id="@+id/menu"
      layout="@layout/menu_container" />

  <LinearLayout
      android:id="@+id/toolbar"
      android:gravity="end"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_skin"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btn_render_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/render_options"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btn_fetch"
        style="@style/OLED.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@android:drawable/stat_sys_download"
        android:drawableTint="@color/background"
        tools:ignore="ButtonStyle" />
  </LinearLayout>
</RelativeLayout>