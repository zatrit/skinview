<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="OLED.Activity" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
    <item name="android:buttonStyle">@style/OLED.Button.Text</item>
    <item name="android:switchStyle">@style/OLED.Switch</item>

    <item name="android:textSize">18sp</item>
    <item name="android:windowBackground">@color/background</item>
  </style>

  <style name="OLED.Button" parent="android:Widget.Material.Button">
    <item name="android:textColor">@color/background</item>
    <item name="android:background">@drawable/button</item>
    <item name="android:minWidth">0dp</item>
  </style>

  <style name="OLED.Button.Text" parent="OLED.Button">
    <item name="android:paddingHorizontal">20dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="OLED.Switch" parent="android:Widget.Material.CompoundButton.Switch">
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingVertical">2.5dp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="OLED.EditText" parent="android:Widget.Material.EditText">
    <item name="android:textColorHint">@android:color/darker_gray</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="OLED.AlertDialog" parent="android:Widget.Material.ButtonBar.AlertDialog">
    <item name="android:backgroundTint">@color/background</item>

    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
  </style>

  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">3dp</item>
    <item name="android:background">@android:color/darker_gray</item>
  </style>
</resources>